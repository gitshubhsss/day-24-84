<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chats</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>All chats</h1>
    <form method="get" action="/chats/new">
        <button>create new chat</button>
    </form>
    <br>
    <div class="chats">
        <% for (const chat of chats) {%>
           <div class="chat">
            <p>From : <i><%= chat.from %></i></p>
            <div class="msg">
                <p>message: <%= chat.msg %></p>
            </div>
            <p> to : <i><%= chat.to %></i></p>
            <hr>
            <p> <%= chat.created_at.toString().split(" ")[4] %></p>
            <p> <%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
           </div>
           <br>
          <div class="btns">
            <form method="get" action="/chats/<%= chat._id %>/edit?_method=PUT" class="edit">
                <button>Edit</button>
               </form>
               <form method="post" action="/chats/<%= chat._id %>?_method=DELETE" class="delete">
                <button>delete</button>
               </form>
          </div>
           <br><br>
        <%} %>
    </div>
</body>

</html>